<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:set="http://www.sitecore.net/xmlconfig/set/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore>
    <pipelines>
      <renderLayout>
        <processor type="Sitecore.Pipelines.RenderLayout.SecurityCheck, Sitecore.Kernel" set:type="Sitecore.Support.Pipelines.RenderLayout.SecurityCheck, Sitecore.Support.175229" />
      </renderLayout>
    </pipelines>
    <settings>
      <setting name="Authentication.SaveRawUrl" role:require="ContentManagement or Standalone">
        <patch:attribute name="value">true</patch:attribute>
      </setting>
    </settings>
  </sitecore>
</configuration>